  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@standup-scribe/database": "workspace:*",
    "@standup-scribe/integrations": "workspace:*",
    "@standup-scribe/platform-discord": "workspace:*",
    "luxon": "^3.5.0"
  },
  "devDependencies": {
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  }
