{
  "name": "@standup-scribe/core",
  "version": "1.0.0",
  "description": "Core platform-agnostic business logic for Standup Scribe",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": "./dist/src/index.js",
    "./workers": "./dist/src/workers/index.js",
    "./workers/*": "./dist/src/workers/*",
    "./services": "./dist/src/services/index.js",
    "./services/*": "./dist/src/services/*",
    "./utils": "./dist/src/utils/index.js",
    "./utils/*": "./dist/src/utils/*",
    "./types": "./dist/src/types/index.js",
    "./types/*": "./dist/src/types/*",
    "./dist/src/utils/error-handling": "./dist/src/utils/error-handling.js",
    "./dist/src/utils/constants": "./dist/src/utils/constants.js"
