{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@standup-scribe/platform-discord": ["../platform-discord/src"],
      "@standup-scribe/platform-discord/*": ["../platform-discord/src/*"],
      "@standup-scribe/core": ["../core/src"],
      "@standup-scribe/core/*": ["../core/src/*"],
      "@standup-scribe/integrations": ["../integrations/src"],
      "@standup-scribe/integrations/*": ["../integrations/src/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    { "path": "../platform-discord" },
    { "path": "../core" },
    { "path": "../integrations" }
  ],
  "exclude": ["node_modules", "dist"]
}
