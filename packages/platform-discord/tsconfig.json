{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "composite": true,
    "baseUrl": "./",
    "paths": {
      "@standup-scribe/core": ["../core/src"],
      "@standup-scribe/core/*": ["../core/src/*"],
      "@standup-scribe/integrations": ["../integrations/src"],
      "@standup-scribe/integrations/*": ["../integrations/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../database" },
    { "path": "../core" },
    { "path": "../integrations" }
  ]
}
