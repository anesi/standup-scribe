{
  "name": "standup-scribe",
  "version": "1.0.0",
  "description": "Platform-agnostic standup bot supporting Discord and Slack",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter @standup-scribe/app-discord dev",
    "dev:slack": "pnpm --filter @standup-scribe/app-slack dev",
    "build": "pnpm -r build",
    "build:discord": "pnpm -r --filter @standup-scribe/database --filter @standup-scribe/core --filter @standup-scribe/integrations --filter @standup-scribe/platform-discord --filter @standup-scribe/app-discord build",
    "build:slack": "echo 'Slack build disabled'",
    "start": "pnpm --filter @standup-scribe/app-discord start",
    "start:slack": "pnpm --filter @standup-scribe/app-slack start",
    "prisma:generate": "pnpm --filter @standup-scribe/database prisma:generate",
    "prisma:migrate": "pnpm --filter @standup-scribe/database prisma:migrate",
    "prisma:studio": "pnpm --filter @standup-scribe/database prisma:studio",
    "lint": "eslint packages --ext .ts",
    "format": "prettier --write \"packages/**/*.ts\"",
    "clean": "pnpm -r clean"
  },
  "keywords": [
    "standup",
    "discord",
    "slack",
    "bot",
    "monorepo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
